<section class="content"><br/>
  <p id="notice"><%= notice %></p>

  <div class="title-wrapper">
    <a href="/posts/<%= @post.id %>"><p class="title"> <%=@post.title %></p></a>
    <% if @post.url %>
      <p class="subhead comhead"> (<%=@post.url %>)</p>
    <% end %>
  </div>
  <div class="info-wrapper">
    <p class="subtext">
      10 points by <a href="#"><%= @post.user.username %></a> <%= time_ago_in_words(@post.created_at) %> |
      <a href="#"><%= @post.comments.size %> comments</p></a>
  </div>
  <% if @post.body %>
    <div class="post-body">
      <p> <%= @post.body %></p>
    </div>
  <% end %>

  <%= form_for [@post, @comment], class: 'form-horizontal' do |f| %>
  <%= f.hidden_field :user_id %>
    <%= f.text_area :body, class: 'comment-field' %><br/>
    <%= f.submit 'add comment', class: 'simple-submit' %>
  <% end %>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', root_path %>
</section>
